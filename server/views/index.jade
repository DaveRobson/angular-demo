extends layout

block content
    nav(role='navigation').navbar.navbar-demo
        div.container.header-bottom-layer
            h1 Demo App
        div.container
            div.demo-header
                div.navbar-header
                div(ng-controller="HeaderController")
                    ul.nav.navbar-nav
                        li(ng-class='{ active: isActive("/")}')
                            a(href='/') Home
                        li(ng-class='{ active: isActive("/users")}')
                            a(href='/users') Users
    div.container
        div.content-container
            div(ng-view)

    script(src='/components/angular/angular.min.js')
    script(src='/components/angular-resource/angular-resource.min.js')
    script(src='/components/angular-route/angular-route.min.js')
    script(src='/components/angular-bootstrap/ui-bootstrap.min.js')
    script(src='/js/app.js')
    script(src='/js/controllers.js')
    script(src='/js/services.js')
